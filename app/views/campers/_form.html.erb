<h3>Form for Camper</h3>

<% if flash[:my_errors] %>
<ul>
  <% flash[:my_errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @camper do |f| %>

<%= f.label "Enter your name:" %>
<%= f.text_field :name %>

<%= f.label "Enter your age:" %>
<%= f.number_field :age, in: 8..18  %>

<%= f.submit %>

<% end %>